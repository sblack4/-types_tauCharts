{
    "compilerOptions": {
        "baseUrl": "types",
        "typeRoots": ["types"],
        "noImplicitAny": true,
        "noEmitOnError": true,
        "declaration": true,
        "alwaysStrict": true,
        "diagnostics": true,
        "removeComments": false,
        "module": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "dist",
        "pretty": true,
        "lib": ["es5", "es6", "es2015", "dom"]
    },
    "files": [
        "src/index.ts"
    ],
    "compileOnSave": true
}